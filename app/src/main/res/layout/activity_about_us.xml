<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEDEF"
    tools:context=".AboutUsActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_box"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"

        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="85dp"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/rounded_box2"
            android:paddingLeft="14dp"
            android:text="AgriSolution"
            android:textColor="@color/teal_200"
            android:textSize="32sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_box2"
            >
            <TextView
                android:id="@+id/tabout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="90dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/black"
                android:text="Our Mission "
                android:textSize="26dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tcontact22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/about1"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tcontact23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="20dp"

                    android:text="@string/about2"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

        </FrameLayout>

    </FrameLayout>

</RelativeLayout>